{
    "Version": "2012-10-17",
    "Id": "ConfigFetch",
    "Statement":[
        {
            "Sid": "Get configuration files",
            "Effect":"Allow",
            "Principal": {
                "AWS": "${ec2_task_role_arn}"
            },
            "Action":[
              "s3:GetObject",
              "s3:ListBucket",
              "s3:ListObjects"
            ],
            "Resource":"${config_bucket_arn}/*"
        }
     ]
}
